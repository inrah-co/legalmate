const mongoose = require("mongoose");

const userSchema = new mongoose.Schema({
  name: {
    type: String,
    required: true,
  },
  password: {
    type: String,
    required: true,
  },
  optimizedResponse: {
    type: Boolean,
    default: true,
  },
  state: {
    type: String,
    default: "active",
  },
});

module.exports = mongoose.model("User", userSchema);
